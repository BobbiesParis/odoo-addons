<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="view_res_users_login_as_form" model="ir.ui.view">
        <field name="name">res.users.login_as.form</field>
        <field name="model">res.users.login_as</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <field name="login_as_user_id"
                        options="{'no_create': True, 'no_open': True}"/>
                </sheet>
                <footer>
                    <button name="login_as" type="object"
                        string="Login as" class="btn-primary"/>
                </footer>
            </form>
        </field>
    </record>

</odoo>
